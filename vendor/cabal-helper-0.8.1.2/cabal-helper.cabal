                     , text             < 1.3  && >= 1.0.0.0
                     , template-haskell < 2.14 && >= 2.7.0.0
                     , temporary        < 1.3  && >= 1.2.1
                     , transformers     < 0.6  && >= 0.3.0.0
  if !os(windows)
