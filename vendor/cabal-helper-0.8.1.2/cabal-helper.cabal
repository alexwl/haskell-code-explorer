  build-tool-depends:  cabal-install:cabal
  build-depends:       base             < 5    && >= 4.7
  if os(windows)
    build-depends:     base                       >= 4.7
  build-depends:       Cabal            < 2.5  && >= 2.0 || < 1.26 && >= 1.14
                     , cabal-plan       < 0.5  && >= 0.3.0.0
                     , containers       < 1    && >= 0.5.5.1
